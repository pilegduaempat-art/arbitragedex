# Streamlit Secrets Configuration Template
# Copy this file to secrets.toml and fill in your actual values
# NEVER commit secrets.toml to GitHub!

# ============================================
# RPC Node Endpoints
# ============================================
# Get free API keys from:
# - Alchemy: https://www.alchemy.com/
# - Infura: https://infura.io/
# - QuickNode: https://www.quicknode.com/

# BSC (Binance Smart Chain)
bsc_rpc = "https://bsc-dataseed1.binance.org"  # Public (slow)
# bsc_rpc = "https://bsc-mainnet.nodereal.io/v1/YOUR_API_KEY"  # Private (recommended)

# Polygon
polygon_rpc = "https://polygon-rpc.com"  # Public (slow)
# polygon_rpc = "https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY"  # Private (recommended)

# Arbitrum
arbitrum_rpc = "https://arb1.arbitrum.io/rpc"  # Public (slow)
# arbitrum_rpc = "https://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY"  # Private (recommended)

# Base
base_rpc = "https://mainnet.base.org"  # Public (slow)
# base_rpc = "https://base-mainnet.g.alchemy.com/v2/YOUR_API_KEY"  # Private (recommended)

# ============================================
# Private RPC for MEV Protection (Optional)
# ============================================
# These should be different from main RPCs, preferably with higher rate limits

# bsc_private_rpc = "https://bsc-mainnet.nodereal.io/v1/YOUR_PRIVATE_KEY"
# polygon_private_rpc = "https://polygon-mainnet.g.alchemy.com/v2/YOUR_PRIVATE_KEY"
# arbitrum_private_rpc = "https://arb-mainnet.g.alchemy.com/v2/YOUR_PRIVATE_KEY"
# base_private_rpc = "https://base-mainnet.g.alchemy.com/v2/YOUR_PRIVATE_KEY"

# ============================================
# Wallet Configuration
# ============================================
# ⚠️ WARNING: NEVER share your private key!
# For testing, use a wallet with small amounts only

# Your wallet private key (without 0x prefix)
# private_key = "your_private_key_here"

# Or use mnemonic phrase (12-24 words)
# mnemonic = "your twelve word mnemonic phrase here"

# ============================================
# Trading Parameters
# ============================================
[trading]
# Minimum profit threshold (percentage)
min_profit_percent = 1.5

# Maximum slippage tolerance (percentage)
max_slippage_percent = 1.0

# Default trade size in USD
default_trade_size = 1000

# Maximum trade size in USD (safety limit)
max_trade_size = 10000

# Gas price strategy: "slow", "medium", "fast", "instant"
gas_strategy = "fast"

# ============================================
# MEV Protection Settings
# ============================================
[mev_protection]
# Enable MEV protection features
enabled = true

# Use private mempool when available
use_private_mempool = true

# Add random delay to avoid timing attacks (seconds)
random_delay_min = 1
random_delay_max = 5

# Front-run protection buffer (extra slippage %)
frontrun_buffer = 0.5

# ============================================
# Flashbots Configuration (Ethereum only)
# ============================================
[flashbots]
# Enable Flashbots (requires Ethereum mainnet)
enabled = false

# Flashbots relay URL
# relay_url = "https://relay.flashbots.net"

# Flashbots signing key
# signing_key = "your_flashbots_signing_key"

# ============================================
# Smart Contract Addresses
# ============================================
# Your deployed FlashArbitrage contract addresses

[contracts]
# bsc_flash_arbitrage = "0x..."
# polygon_flash_arbitrage = "0x..."
# arbitrum_flash_arbitrage = "0x..."
# base_flash_arbitrage = "0x..."

# ============================================
# Aave Flash Loan Addresses
# ============================================
# Pool Address Provider for flash loans

[aave]
bsc_pool_provider = "0x..."  # Not available on BSC
polygon_pool_provider = "0xa97684ead0e402dC232d5A977953DF7ECBaB3CDb"
arbitrum_pool_provider = "0xa97684ead0e402dC232d5A977953DF7ECBaB3CDb"
base_pool_provider = "0xe20fCBdBfFC4Dd138cE8b2E6FBb6CB49777ad64D"

# ============================================
# Notification Settings (Optional)
# ============================================
[notifications]
# Enable Telegram notifications
telegram_enabled = false
# telegram_bot_token = "YOUR_BOT_TOKEN"
# telegram_chat_id = "YOUR_CHAT_ID"

# Enable Discord webhooks
discord_enabled = false
# discord_webhook_url = "YOUR_WEBHOOK_URL"

# Email notifications via SendGrid
email_enabled = false
# sendgrid_api_key = "YOUR_API_KEY"
# notification_email = "your@email.com"

# ============================================
# Monitoring & Logging
# ============================================
[monitoring]
# Log level: "DEBUG", "INFO", "WARNING", "ERROR"
log_level = "INFO"

# Save trade history to database
save_trade_history = true

# Database connection (optional)
# database_url = "postgresql://user:pass@host:5432/dbname"

# ============================================
# Safety Limits
# ============================================
[safety]
# Maximum daily loss before stopping (USD)
max_daily_loss = 500

# Maximum number of consecutive failed trades
max_consecutive_fails = 3

# Minimum wallet balance to maintain (in native token)
min_wallet_balance_bnb = 0.1
min_wallet_balance_matic = 10
min_wallet_balance_eth = 0.05

# Emergency stop on high gas prices (in gwei)
emergency_gas_limit_gwei = 100

# ============================================
# Development/Testing
# ============================================
[development]
# Use testnet instead of mainnet
use_testnet = false

# Testnet RPC endpoints
# bsc_testnet_rpc = "https://data-seed-prebsc-1-s1.binance.org:8545"
# polygon_testnet_rpc = "https://rpc-mumbai.maticvigil.com"

# Simulation mode (no real transactions)
simulation_mode = false

# ============================================
# Advanced Settings
# ============================================
[advanced]
# Transaction timeout (seconds)
transaction_timeout = 120

# Number of confirmation blocks to wait
confirmation_blocks = 2

# Retry failed transactions
retry_failed_transactions = true
max_retries = 3

# Use multicall for batch requests
use_multicall = true

# Cache duration for price data (seconds)
price_cache_duration = 5
